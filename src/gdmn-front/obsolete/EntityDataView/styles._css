.MDGrid {
  display: grid;
  width: 100%;
  height: 100%;
  grid-template-columns: 50% 50%;
  grid-template-rows: auto auto 1fr;
}

.MDGridTop {
  grid-column: 1 / 2;
  grid-row: 1 / 1;
}

.MDGridMasterTop {
  grid-column: 1 / 1;
  grid-row: 2 / 2;
}

.MDGridMasterTable {
  grid-column: 1 / 1;
  grid-row: 3 / 3;
}

.MDGridDetailTop {
  grid-column: 2 / 2;
  grid-row: 2 / 2;
}

.MDGridDetailTable {
  grid-column: 2 / 2;
  grid-row: 3 / 3;
}

.SGrid {
  display: grid;
  width: 100%;
  height: 100%;
  grid-template-columns: 1fr;
  grid-template-rows: auto 1fr;
}

.SGridTop {
  grid-column: 1 / 1;
  grid-row: 1 / 1;
}

.SGridTable {
  grid-column: 1 / 1;
  grid-row: 2 / 2;
}
