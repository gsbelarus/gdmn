{
  "extends": "tslint:recommended",
  "rules": {
    "quotemark": [true, "single", "jsx-double"],
    "trailing-comma": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "unified-signatures": false,
    "no-console": false,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "array-destructuring"
    ]
  }
}
